{
    "app-id": "net.figuiere.Niepce.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version": "master",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.llvm16",
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "niepce",
    "desktop-file-name-prefix": "(Devel) ",
    "finish-args" : [
        "--allow=devel",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--share=network",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--device=all",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options" : {
        "build-args": [
            "--share=network"
        ],
        "test-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_HOME": "/run/build/niepce/cargo"
        },
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm16/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm16/lib"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/devhelp",
        "/share/doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libusb",
            "config-opts": [
                "--disable-udev"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libusb/libusb/releases/download/v1.0.22/libusb-1.0.22.tar.bz2",
                    "sha256": "75aeb9d59a4fdb800d329a545c2e6799f732362193b465ea198f2aa275518157"
                }
            ]
        },
        {
            "name": "libgphoto2",
            "cleanup": [
                "/bin",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gphoto/libgphoto2/releases/download/v2.5.31/libgphoto2-2.5.31.tar.xz",
                    "sha256": "8fc7bf40f979459509b87dd4ff1aae9b6c1c2b4724d37db576081eec15406ace"
                }
            ]
        },
        {
            "name": "libraw",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin",
                "/share/doc"
            ],
            "sources": [
                {
                    "type" : "archive",
                    "url" : "http://www.libraw.org/data/LibRaw-0.19.5.tar.gz",
                    "sha256" : "40a262d7cc71702711a0faec106118ee004f86c86cc228281d12d16da03e02f5"
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DEXIV2_BUILD_DOC=OFF",
                "-DEXIV2_BUILD_SAMPLES=OFF",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_ENABLE_BMFF=ON",
                "-DEXIV2_ENABLE_INIH=OFF"
            ],
            "cleanup": [
                "/bin",
                "/lib/cmake",
                "/share/man"
            ],
            "sources": [
                 {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/archive/refs/tags/v0.28.2.tar.gz",
                    "sha256": "543bead934135f20f438e0b6d8858c55c5fcb7ff80f5d1d55489965f1aad58b9"
                 }
            ]
        },
        {
            "name": "gexiv2",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=false",
                "-Dpython3=false",
                "-Dtools=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gexiv2/0.14/gexiv2-0.14.2.tar.xz",
                    "sha256": "2a0c9cf48fbe8b3435008866ffd40b8eddb0667d2212b42396fdf688e93ce0be"
                }
            ]
        },
        {
            "name" : "babl",
            "buildsystem": "meson",
            "cleanup": [
                "/bin"
            ],
            "config-opts": [
                "-Dwith-docs=false",
                "-Denable-vapi=false",
                "-Denable-gir=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gimp.org/pub/babl/0.1/babl-0.1.108.tar.xz",
                    "sha256" : "26defe9deaab7ac4d0e076cab49c2a0d6ebd0df0c31fd209925a5f07edee1475"
                }
            ]
        },
        "heif.json",
        {
            "name": "gegl",
            "buildsystem": "meson",
            "cleanup": [
                "/bin"
            ],
            "config-opts": [
                "-Dgtk-doc=false",
                "-Dvapigen=disabled",
                "-Dlibav=disabled",
                "-Dintrospection=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gimp.org/pub/gegl/0.4/gegl-0.4.48.tar.xz",
                    "sha256": "418c26d94be8805d7d98f6de0c6825ca26bd74fcacb6c188da47533d9ee28247"
                }
            ]
        },
        {
            "name": "mm-common",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/mm-common/0.9/mm-common-0.9.12.tar.xz",
                    "sha256": "ceffdcce1e5b52742884c233ec604bf6fded12eea9da077ce7a62c02c87e7c0b"
                }
            ]
        },
        {
            "name": "sigc++",
            "cleanup": [
                "/lib/sigc++-*"
            ],
            "config-opts": [
                "--disable-documentation"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsigc++/3.2/libsigc++-3.2.0.tar.xz",
                    "sha256": "8cdcb986e3f0a7c5b4474aa3c833d676e62469509f4899110ddf118f04082651"
                }
            ]
        },
        {
            "name": "glibmm",
            "buildsystem": "meson",
            "cleanup": [
                "/lib/giomm-*",
                "/lib/glibmm-*"
            ],
            "config-opts": [
                "-Dbuild-deprecated-api=false",
                "-Dbuild-examples=false",
                "-Dbuild-documentation=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glibmm/2.68/glibmm-2.68.2.tar.xz",
                    "sha256": "91e0a8618f7b82db4aaf2648932ea2bcfe626ad030068c18fa2d106fd838d8ad"
                }
            ]
        },
        {
            "name": "cairomm",
            "cleanup": [
                "/lib/cairomm-1.16"
            ],
            "config-opts": [
                "--disable-documentation"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://cairographics.org/releases/cairomm-1.16.1.tar.xz",
                    "sha256": "6f6060d8e98dd4b8acfee2295fddbdd38cf487c07c26aad8d1a83bb9bff4a2c6"
                }
            ]
        },
        {
            "name": "pangomm",
            "buildsystem": "meson",
            "cleanup": [
                "/lib/pangomm-*"
            ],
            "config-opts": [
                "-Dbuild-deprecated-api=false",
                "-Dbuild-documentation=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pangomm/2.50/pangomm-2.50.0.tar.xz",
                    "sha256": "a27aa77e017b9afce9e751d85bd1cf890abbb3a58bf59d0fac917eef82db3b5b"
                }
            ]
        },
        {
            "name": "atkmm",
            "buildsystem": "meson",
            "cleanup": [
                "/lib/atkmm-2.36"
            ],
            "config-opts": [
                "-Dbuild-deprecated-api=false",
                "-Dbuild-documentation=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/atkmm/2.36/atkmm-2.36.1.tar.xz",
                    "sha256": "e11324bfed1b6e330a02db25cecc145dca03fb0dff47f0710c85e317687da458"
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dvapi=false",
                "-Dgir=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate.git",
                    "tag": "1.0.4",
                    "commit": "eb1afec539cb3aeae1f2d3f35fd377c51d5ead50"
                }
            ]
        },
        {
            "name": "exempi",
            "config-opts": [
                "--enable-unittest=no"
            ],
            "cleanup": [
                "/bin",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://libopenraw.freedesktop.org/download/exempi-2.6.4.tar.xz",
                    "sha256": "fa9c2456bf570172f0877c4eb13cd204c62ae1fdf65c3d6b71b41d88e1066f84"
                }
            ]
        },
        {
            "name": "libiptcdata",
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--enable-maintainer-mode"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ianw/libiptcdata/archive/release_1_0_5.tar.gz",
                    "sha256": "78a5c49b646cb610c84bc4dfc730caad9a06e9b4e295600908782f4abb25316e"
                },
                {
                    "type": "shell",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} ."
                    ]
                }
            ]
        },
        {
            "name": "lensfun",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lensfun/lensfun/archive/refs/tags/v0.3.3.tar.gz",
                    "sha256": "57ba5a0377f24948972339e18be946af12eda22b7c707eb0ddd26586370f6765"
                }
            ]
        },
        "fftw3f.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0"
                }
            ]
        },
        {
            "name": "niepce",
	    "buildsystem": "meson",
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
