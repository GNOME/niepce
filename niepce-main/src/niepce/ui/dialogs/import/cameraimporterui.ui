<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkGrid" id="main_widget">
    <child>
      <object class="GtkComboBoxText" id="camera_list_combo">
        <property name="halign">1</property>
        <property name="hexpand">true</property>
        <layout>
          <property name="column">1</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="halign">1</property>
        <property name="label" translatable="true">Available cameras:</property>
        <layout>
          <property name="column">0</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="select_camera_btn">
        <property name="focusable">true</property>
        <property name="label" translatable="true">Select</property>
        <property name="receives-default">true</property>
        <layout>
          <property name="column">2</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
